{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "baseUrl": "src",
        "jsx": "react",
        "paths": {
            "components/*": ["components/*"],
            "hooks/*": ["hooks/*"],
            "interfaces/*": ["interfaces/*"],
            "models/*": ["models/*"],
            "redux/*": ["redux/*"],
            "services/*": ["services/*"],
            "static/*": ["static/*", "static/sass/*"],
            "storage/*": ["storage/*"],
            "router/*": ["components/router/*"],
        },
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*"]
}
